{
    // 使用中文注释，便于团队理解
    "version": "0.2.0",
    "configurations": [
        {
            "name": "运行扩展",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: build", // 启动前自动构建
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}