{
  "name": "@supernode/extension",
  "version": "1.0.0",
  "description": "VSCode 扩展核心",
  "main": "./dist/extension/src/extension.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "dependencies": {
    "@supernode/shared": "file:../shared",
    "gray-matter": "^4.0.3",
    "mdast": "^2.3.2",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "publisher": "supernode",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Supernode Markdown Extension",
      "properties": {
        "supernode.autoOpenPreview": {
          "type": "boolean",
          "default": true,
          "description": "是否在扩展激活时自动开启预览面板"
        },
        "supernode.previewPosition": {
          "type": "string",
          "enum": [
            "beside",
            "active",
            "second"
          ],
          "default": "beside",
          "description": "预览面板的显示位置"
        }
      }
    },
    "commands": [
      {
        "command": "supernode.openPreview",
        "title": "打开 Markdown 预览",
        "category": "Supernode"
      },
      {
        "command": "supernode.scanMarkdownFiles",
        "title": "扫描 Markdown 文件",
        "category": "Supernode"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "supernode.openPreview",
          "when": "editorLangId == markdown || editorLangId == mdx"
        }
      ],
      "editor/title": [
        {
          "command": "supernode.openPreview",
          "when": "editorLangId == markdown || editorLangId == mdx",
          "group": "navigation"
        }
      ]
    }
  }
}
