{
  "name": "supernode-markdown-extension",
  "version": "1.0.0",
  "description": "重构后的 VSCode 扩展，具有更好的架构设计",
  "main": "./vscode/dist/index.js",
  "publisher": "supernode",
  "displayName": "Supernode Markdown Extension",
  "scripts": {
    "build": "npm run build:shared && npm run build:vscode && npm run build:webview",
    "build:shared": "cd shared && npm run build",
    "build:vscode": "cd vscode && npm run build",
    "build:webview": "cd webview && npm run build",
    "dev": "concurrently \"npm run dev:vscode\"",
    "dev:vscode": "cd vscode && npm run watch",
    "clean": "npm run clean:shared && npm run clean:vscode",
    "clean:shared": "cd shared && npm run clean",
    "clean:vscode": "cd vscode && npm run clean",
    "install:all": "npm install && npm run install:shared && npm run install:vscode && npm run install:webview",
    "install:shared": "cd shared && npm install",
    "install:vscode": "cd vscode && npm install",
    "install:webview": "cd webview && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/helloooooooooooooo97/markdown-vscode-extension"
  },
  "license": "MIT-NC",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown",
    "onLanguage:mdx"
  ],
  "contributes": {
    "configuration": {
      "title": "Supernode Markdown Extension",
      "properties": {
        "supernode.autoOpenPreview": {
          "type": "boolean",
          "default": true,
          "description": "是否在扩展激活时自动开启预览面板"
        },
        "supernode.previewPosition": {
          "type": "string",
          "enum": [
            "beside",
            "active",
            "second"
          ],
          "default": "beside",
          "description": "预览面板的显示位置"
        }
      }
    },
    "commands": [
      {
        "command": "supernode.openPreview",
        "title": "打开 Markdown 预览",
        "category": "Supernode"
      },
      {
        "command": "supernode.scanMarkdownFiles",
        "title": "扫描 Markdown 文件",
        "category": "Supernode"
      },
      {
        "command": "supernode.startFileWatching",
        "title": "启动文件监听",
        "category": "Supernode"
      },
      {
        "command": "supernode.stopFileWatching",
        "title": "停止文件监听",
        "category": "Supernode"
      },
      {
        "command": "supernode.refreshProblemsPanel",
        "title": "刷新 Problems 面板",
        "category": "Supernode"
      },
      {
        "command": "supernode.clearAllDiagnostics",
        "title": "清除所有诊断",
        "category": "Supernode"
      },
      {
        "command": "supernode.validatePaths",
        "title": "验证路径配置",
        "category": "Supernode"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "supernode.openPreview",
          "when": "editorLangId == markdown || editorLangId == mdx"
        }
      ],
      "editor/title": [
        {
          "command": "supernode.openPreview",
          "when": "editorLangId == markdown || editorLangId == mdx",
          "group": "navigation"
        }
      ]
    }
  }
}